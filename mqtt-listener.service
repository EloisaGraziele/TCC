[Unit]
Description=Sistema de Presen√ßa - MQTT Listener
After=network.target

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/home/ser/projetos/sistema-presenca
ExecStart=/usr/bin/php /home/ser/projetos/sistema-presenca/artisan mqtt:listen
Restart=always
RestartSec=10
